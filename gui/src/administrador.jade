	ul#mainNav(ng-controller="admin")
		//- Este navegador tendrá la ruta, ejemplo: Admin/Gestion de usuarios/Usario Pepito
		li.active
			a(href='#') inicio
		// Use the "active" class for the active menu item
		li
			a(ng-click="rutaNivel(1)") Ruta nivel 1
		li
			a(ng-click="rutaNivel(2)") Ruta nivel 2
		li
			a(ng-click="rutaNivel(3)") Ruta nivel 3

		li.logout
			a(ng-click="cerrarSesion()") Salir
		li.logout
