//- index.jade
extends ./main
block variables
	- npApp = "app"

block devScriptHead
	script(src="js/servicios/conexion.js")
	script(src="js/servicios/sesion.js")
	link(
		rel='stylesheet'
		href='css/transdmin.css'
	)
block scriptHead
	//- el nombre sería así
	script(src="js/a.js")
block devScriptBody
