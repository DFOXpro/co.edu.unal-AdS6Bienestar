script(
	type="text/ng-template"
	id="btabla-tmplt"
)
	h3 {{tabla.titulo}}
	table(cellpadding='0', cellspacing='0')
		tr(
			ng-repeat="linea in tabla.lineas"
			ng-class-odd="'odd'"
		)
			td {{linea.titulo}}
			td
				a.view(href='#{{tabla.verAccion}}/{{linea.id}}?nombre={{linea.titulo}}') Ver
