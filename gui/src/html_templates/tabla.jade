script(
	type="text/ng-template"
	id="btabla-tmplt"
)
	h3 {{tabla.titulo}}
	table(cellpadding='0', cellspacing='0')
		tr(
			ng-repeat="linea in tabla.lineas"
			ng-class-odd="'odd'"
		)
			td {{linea.titulo}}
			td
				a.view(
					href='#{{tabla.verAccion}}/{{linea.id}}?nombre={{linea.titulo}}'
					ng-hide="tabla.accion2.exist"
				) Ver
				a.edit(
					ng-show="tabla.accion2.exist"
					ng-click='{{tabla.accion2.fun}}({{linea.id}})'
				) {{tabla.accion2.texto}}
				// a.delete(href='#{{eliminarAccion}}/{{linea.id}}') Eliminar


//- Ejemplo
	tr.odd
		td Convocatoria 2
		td.action
			a.view(href='#') Ver
			a.edit(href='#') Editar
			a.delete(href='#') Eliminar